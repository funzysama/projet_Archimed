{% extends 'admin/base.html.twig' %}

{% block page_title %}Hello AdminController!{% endblock %}
{% block logo_path %}{% endblock %}
{% block page_content %}
    <div class="col-md-12">
        {# ... box widget with defaults ... #}
        {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}

            {% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}
            {% block box_title %}Widget box title{% endblock %}
            {% block box_body %}
                <div class="callout callout-info">
                    {{ dump(admin_lte_context.options) }}
                </div>
            {% endblock %}
            {% block box_footer %}
                <div class="pull-right">
                    {{ btn.link_button('save', '#', 'floppy') }}
                </div>
            {% endblock %}
        {% endembed %}
    </div>
    {% endblock %}
